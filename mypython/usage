pip install virtualenv

# on Windows
pip install virtualenvwrapper-win
# on macOS / Linux
# pip version >= v22.1
pip install --root-user-action=ignore virtualenvwrapper
#'--root-user-action=ignore' to resolve install package in root mode

# maybe check version first
# check pip version
pip --version

# upgrade pip version
pip install --upgrade pip
pip3 install --upgrade pip

# add "virtualenvwrapper-setting.sh" to .bashrc source


